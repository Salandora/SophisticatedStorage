{
    "schemaVersion": 1,
    "id": "sophisticatedstorage",
    "version": "${mod_version}",
    "name": "Sophisticated Storage",
    "description": "Fancy and functional storage containers.",
    "license": "GNU General Public License v3.0",
    "icon": "SophisticatedStorageFabric.png",
    "authors": [
        "P3pp3rF1y",
        "Ridanisaurus",
        "Salandora"
    ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/sophisticated-storage-unofficial-fabric-port",
        "issues": "https://github.com/Salandora/SophisticatedStorage/issues",
        "sources": "https://github.com/Salandora/SophisticatedStorage/"
    },
    "environment": "*",
    "entrypoints": {
        "main": [
            "net.p3pp3rf1y.sophisticatedstorage.SophisticatedStorage"
        ],
        "client": [
            "net.p3pp3rf1y.sophisticatedstorage.client.SophisticatedStorageClient"
        ],
        "fabric-datagen": [
            "net.p3pp3rf1y.sophisticatedstorage.data.DataGenerators"
        ],
        "jade": [
            "net.p3pp3rf1y.sophisticatedstorage.compat.jade.StorageJadePlugin"
        ],
        "emi": [
            "net.p3pp3rf1y.sophisticatedstorage.compat.emi.EmiCompat"
        ],
        "jei_mod_plugin": [
            "net.p3pp3rf1y.sophisticatedstorage.compat.jei.StoragePlugin"
        ],
        "rei_common": [
            "net.p3pp3rf1y.sophisticatedstorage.compat.rei.REICompat"
        ],
        "rei_client": [
            "net.p3pp3rf1y.sophisticatedstorage.compat.rei.REIClientCompat"
        ]
    },
    "mixins": [
        "sophisticatedstorage.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${loader_version}",
        "fabric-api": ">=${fabric_version}",
        "minecraft": "${minecraft_version}",
        "sophisticatedcore": ">=${sc_version}",
        "forgeconfigapiport": ">=${forge_config_version}",
        "team_reborn_energy": ">=${energy_version}",
        "porting_lib_loot": ">=${port_lib_version}",
        "porting_lib_model_loader": ">=${port_lib_version}",
        "porting_lib_transfer": ">=${port_lib_version}"
    },
    "suggests": {
        "modmenu": "*"
    },
    "custom": {
        "loom:injected_interfaces": {
            "net/minecraft/class_2586": ["net/p3pp3rf1y/sophisticatedstorage/extensions/CapabilityHelper"]
        },
        "modmenu": {
            "parent": {
                "id": "sophisticatedmods",
                "name": "Sophisticated Mods",
                "description": "Group of P3pp3rf1y's Sophisticated Mods"
            }
        }
    }
}